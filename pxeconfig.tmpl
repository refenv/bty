UI menu.c32
DEFAULT boot_hd0
MENU TITLE options for ${HOSTNAME}
MENU AUTOBOOT Starting boot from hd0 with bzImage in # seconds
TIMEOUT 50
TOTALTIMEOUT 600
PROMPT 0

LABEL boot_hd0
	MENU LABEL Boot from hd0
	COM32 chain.c32
	APPEND hd0

LABEL boot_hd0_bzi
	MENU LABEL Boot from hd0 with bzImage
	KERNEL images/${HOSTNAME}.bzImage
	APPEND root=/dev/sda1 rw console=ttyS1,115200 net.ifnames=0 biosdevname=0

LABEL install
	MENU LABEL install
	KERNEL vmlinuz
	APPEND initrd=initrd.img boot=live username=user union=overlay config components quiet noswap edd=on nomodeset nodmraid locales= keyboard-layouts= ocs_live_run="ocs-live-general" ocs_live_extra_param="" ocs_live_batch=no net.ifnames=0 nosplash noprompt fetch=http://ch-boot01:8000/cilla/filesystem.squashfs